{
  "name": "{{appNameLC}}",
  "version": "{{version}}",
  "description": "{{description}}",
  "license": "{{license}}",
  "main": "index.js",{{author}} {{git}}
  "scripts": {
    "start": "node index.js",
    "test": "mocha --exit -r ts-node/register test/**/*.ts",
    "check": "START_MODE=2 node index.js",
    "start:docker": "node dockerwait.js && pm2 start index.js && pm2 logs index",
    "dockerBuild": "docker build -t zation/{{appNameLC}} . ",
    "dockerExport" : "docker save --output {{appNameLC}}.tar zation/{{appNameLC}}",
    "dockerRun": "docker run --name zation-{{appNameLC}} -p{{port}}:{{port}} zation/{{appNameLC}}",
    "dockerStop": "docker stop zation-{{appNameLC}} && docker rm -f zation-{{appNameLC}}"
  },
  "dependencies": {
    "zation-server": "{{zationServerVersion}}",
    "typescript": "{{typescriptVersion}}",
    "zation-assured": "{{zationAssuredVersion}}",
    "mocha": "^6.1.4",
    "ts-node": "^8.2.0"
  }
}
