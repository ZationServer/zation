{
  "name": "{{appNameLC}}",
  "version": "{{version}}",
  "description": "{{description}}",
  "license": "{{license}}",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",{{author}}{{git}}
  "scripts": {
    "start": "node dist/index.js",
    "start:docker": "node dockerwait.js && pm2 start dist/index.js && pm2 logs index",
    "prestart": "npm run build",
    "build": "gulp compile",
    "watch": "gulp watch",
    "dockerBuild": "docker build -t zation/{{appNameLC}} . ",
    "dockerExport" : "docker save --output {{appNameLC}}.tar zation/{{appNameLC}}",
    "dockerRun": "docker run --name zation-{{appNameLC}} -p{{port}}:{{port}} zation/{{appNameLC}}",
    "dockerStop": "docker stop zation-{{appNameLC}} && docker rm -f zation-{{appNameLC}}"
  },
  "files": [
    "dist/**/*"
  ],
  "dependencies": {
    "zation": "{{zationVersion}}"
  },
  "devDependencies": {
    "gulp": "4.0.0",
    "gulp-typescript": "5.0.0-alpha.3",
    "typescript": "2.9.2",
    "graceful-fs": "4.1.11",
    "minimatch": "3.0.4"
  }
}
